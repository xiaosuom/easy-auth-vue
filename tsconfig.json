{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist", // 生成的文件目录
    "rootDir": "./packages", // 源文件目录
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}